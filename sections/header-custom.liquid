<div data-section-id="{{ section.id }}" class="container header-section" data-section-type="header-section">
  <header role="banner" class="container header-banner">
    <section role="navigation">
      <nav class="navbar navbar-expand-lg justify-content-center">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="fa fa-2x fa-bars"></span>
          </button>
          <a href="/" class="ml-auto mr-auto d-xl-none d-lg-none d-block"><span class="navbar-brand">CROSSWORDS</span></a>
          <a class="d-xl-none d-lg-none d-block" href="/cart">
            <span class="cart">
              <img src="{{ 'cart.svg' | asset_url }}" />
            </span>
            <span class="count">{{ cart.item_count }}</span>
          </a>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="mr-auto ml-auto"></div>
            <ul class="navbar-nav">
            {%- assign collection = collections[section.settings.collection] -%}
            {% assign count = 0 %}
            {% for link in linklists[section.settings.main_linklist].links %}
              <li class="nav-item text-center {% if count != 2 %} col-lg-2 col-sm-12 {% else%} col-lg-4 d-lg-block d-none{% endif %} ">
                <a href="{{ link.url }}" class="nav-link" {% if link.active %}aria-current="page"{% endif %}>{{ link.title | escape }}</a>
              </li>
              {% assign count = count | plus: 1 %}
            {% endfor %}
            <li class="nav-item col-lg-2 col-sm-12 d-xs-none d-lg-block d-none">
              <a class="nav-link text-center" href="/cart">
                <span class="cart">
                  <img src="{{ 'cart.svg' | asset_url }}" />
                </span>
                <span class="count">{{ cart.item_count }}</span>
              </a>
            </li>
            </ul>
          </div>
      </nav>
    </section>
  </header>
</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}
