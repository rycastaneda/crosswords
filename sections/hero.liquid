<div class="banner">
  <div class="banner-overlay">
  </div>
  <div class="shadow-overlay"></div>
  <div class="product-images" style="background-image: url({{section.settings.banner | img_url: 'master'}})">
  </div>
  <div class="container">
      <div class="logo">
        <img class="img-fluid" src="{{ section.settings.logo | img_url: '450x450' }}" alt="">
        <h1>{{section.settings.title}}</h1>
      </div>
  </div>
</div>


{% schema %}
  {
    "name": "Hero Banner",
    "class": "index-section index-section--flush",
    "settings": [
      {
        "id": "banner",
        "type": "image_picker",
        "label": "banner"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Wines"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "logo"
      }
    ],
    "presets": [
      {
        "name": "Hero with Logo",
        "category": "Image"
      }
    ]
  }
{% endschema %}
